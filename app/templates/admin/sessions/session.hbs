{{#if  isEditing}}
    {{partial 'admin/sessions/edit'}}
    <button {{action 'doneEditing'}}>Done</button>
{{else}}

<!-- Brian - make Adding a session work. -->
    {{#if isAdding}}
        {{partial 'admin/session/add'}}
        <button {{action 'doneAdding'}}>Done</button>
    {{else}}
    <table>
        <tr>
            <td>Session Name:</td>
            <td>{{sessionName}}</td>
        </tr>
        <tr>
            <td>Capacity:</td>
            <td>{{capacity}}</td>
        </tr>
        <tr>
            <td>Instructor:</td>
            <td>{{instructorName}}</td>
        </tr>
        <tr>
            <td>Location:</td>
            <td>{{location}}</td>
        </tr>
        <tr>
            <td>Image URL:</td>
            <td>{{imageUrl}}</td>
        </tr>
        <tr>
            <td valign="top">Description</td>
            <!-- 3 handlebars to html escape content -->
            <td>{{{description}}}</td>
        </tr>
        <tr>
            <td>
                <button {{action 'edit'}}>Edit</button>
            </td>
            <td>
                <button {{action 'delete'}}>Delete</button>
            </td>
        </tr>
    </table>
    {{/if}}
{{/if}}
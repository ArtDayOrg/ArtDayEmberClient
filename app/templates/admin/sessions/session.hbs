{{#admin-only isAdmin=admin.isAdmin}}
	{{#if isEditing}}
	    {{partial 'admin/sessions/edit'}}
	    <button {{action 'doneEditing'}}>Done</button>
	{{else}}{{#if isAdding}}
	    {{partial 'admin/sessions/add'}}
	    <button {{action 'doneAdding'}}>Done</button>
	{{else}}
	    {{session-pane item=model edit="edit" delete="delete" isEditing=isEditing isAdding=isAdding isAdmin=admin.isAdmin isEnrolled=admin.isEnrolled shouldRefresh=shouldRefresh}}
	{{/if}}{{/if}}
	{{#if admin.isEnrolled}}
		{{roster-session rosters=rosters}}
	{{/if}}
{{/admin-only}}